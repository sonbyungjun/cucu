{
    "compilerOptions": {
      "sourceMap": true,
      "target": "es2019",
      "module": "commonjs",
      "outDir": "./dist",
      "baseUrl": "./src",
      "alwaysStrict": true,
      "noImplicitAny": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "allowSyntheticDefaultImports": true,
      "moduleResolution": "node",
      "typeRoots": ["./node_modules/@types"],
      "resolveJsonModule": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"],
    "types": [
      "src/types"
    ]
  }
